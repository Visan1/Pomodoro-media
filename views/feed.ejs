<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/daisyui@2.31.0/dist/full.css" rel="stylesheet" type="text/css" />
   <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <section class="bg-white bg-auto dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <header class="ml-10">
        <h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white text-center">What's New Today</h1>
        <a class="btn btn-info text-white" href="/profile">Back to Profile</a>
        <a class="btn btn-info text-white" href="/todos">Today's Daily Tasks</a>
      </header>


        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
            <div class="lg:flex">
              <ul class="flex flex-wrap justify-around">
                <% for(var i=0; i<posts.length; i++) {%>
                <li>
                  <div class="flex flex-col justify-between py-6 lg:mx-6">
                    <h2 class="text-white"><%= posts[i].title%></h2>
                    <a href="/post/<%= posts[i]._id%>">
                      <img class="img-fluid object-cover w-full h-80 rounded-lg lg:w-64" src="<%= posts[i].image%>">
                    </a>
                  </div>
                </li>
                <% } %>
              </ul>

                <div class="flex flex-col justify-between py-6 lg:mx-6">
                    <a href="#" class="text-xl font-semibold text-gray-800 hover:underline dark:text-white ">
                    </a>
                    
                </div>
            </div>
        </div>
    </div>
  </section>
</body>